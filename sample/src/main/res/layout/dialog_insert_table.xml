<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_content_bottom_padding"
    android:paddingEnd="@dimen/dialog_content_horizontal_padding"
    android:paddingLeft="@dimen/dialog_content_horizontal_padding"
    android:paddingRight="@dimen/dialog_content_horizontal_padding"
    android:paddingStart="@dimen/dialog_content_horizontal_padding"
    android:paddingTop="@dimen/dialog_content_top_padding"
    tools:context="com.jkcarino.rtexteditorview.sample.InsertLinkDialogFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/column_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_no_of_columns"
            android:inputType="number"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_vertical_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/row_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_no_of_rows"
            android:inputType="number"
            android:maxLength="2" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>